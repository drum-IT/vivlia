<% include ../partials/header %>
	<div class="list list--grid">
		<% foundBookings.forEach(booking => { %>
			<div class="list__item--grid">
				<a class="list__item__name" href="/bookings/<%= booking.id %>">
					<%= booking.name %>
				</a>
				<div class="list__item__buttons">
					<a class="list__item__button list__item__button--info" href="/bookings/
					<%= booking.id %>">
						<i class="fas fa-info input__icon"></i>
					</a>
					<a class="list__item__button list__item__button--edit" href="/bookings/<%= booking.id %>/edit">
						<i class="fas fa-edit input__icon"></i>
					</a>
					<form action="/bookings/<%= booking.id %>?_method=DELETE" method="POST">
						<button class="list__item__button list__item__button--delete">
							<i class="fas fa-trash-alt input__icon"></i>
						</button>
					</form>
				</div>
			</div>
			<% }); %>
				<div class="list__item--grid">
					<a class="list__add" href="/bookings/new">
						<i class="fas fa-plus"></i>
					</a>
				</div>
	</div>
	<% include ../partials/footer %>