<% include ../partials/header %>
  <div class="row">
    <div style="width: 30%; margin: 35px auto;">
      <h1 style="text-align: center">Update a Booking</h1>
      <form action="/bookings/<%= foundRoom.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" value="<%= foundBooking.name %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Save</button>
        </div>
      </form>
      <a href="/users/<%= user.id %>/rooms/<%= foundRoom.id %>">Go Back</a>
    </div>
  </div>
  <% include ../partials/footer %>